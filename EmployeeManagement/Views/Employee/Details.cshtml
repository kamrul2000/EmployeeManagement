@model EmployeeManagement.Models.Employee
<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm">
                <div class="card-header text-white text-center" style="background: linear-gradient(90deg, #0d6efd, #6610f2);">
                    <h3 class="mb-0">Employee Details</h3>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <h5 class="text-muted">Name</h5>
                        <p class="fw-bold">@Model.FullName</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-muted">Email</h5>
                        <p class="fw-bold">@Model.Email</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-muted">Department</h5>
                        <p class="fw-bold">@Model.Department</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-muted">Join Date</h5>
                        <p class="fw-bold">@Model.JoinDate.ToShortDateString()</p>
                    </div>
                    <div class="mb-3">
                        <h5 class="text-muted">Salary</h5>
                        <p class="fw-bold">@Model.Salary.ToString("C") BDT</p>
                    </div>

                    <div class="d-grid">
                        <a asp-action="Index" class="btn btn-secondary btn-block">Back to Employees</a>
                    </div>
                </div>
                <div class="card-footer text-center text-muted">
                    Employee Management System
                </div>
            </div>
        </div>
    </div>
</div>
