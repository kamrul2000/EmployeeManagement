@model List<EmployeeManagement.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}

<div class="container mt-5">
    <div class="row align-items-center mb-4 pb-2 border-bottom">
        <div class="col-md-4">
            <h2 class="fw-bolder text-dark mb-2 mb-md-0">Employee Directory</h2>
        </div>

        <div class="col-md-3 text-md-end ms-auto">
            <a asp-action="Create" class="btn btn-primary btn-lg fw-bold shadow-sm w-100 w-md-auto">
                <i class="bi bi-person-plus me-2"></i> Add New Employee
            </a>
        </div>
    </div>

    <div class="card shadow-sm border-0">
        <div class="table-responsive">
            <table id="employeeTable" class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Department</th>
                        <th>Join Date</th>
                        <th>Salary</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var e in Model)
                    {
                        <tr>
                            <td class="fw-semibold">@e.FullName</td>
                            <td>@e.Email</td>
                            <td>@e.Department</td>
                            <td>@e.JoinDate.ToShortDateString()</td>
                            <td>BDT @String.Format("{0:N}", e.Salary)</td>
                            <td class="text-center">
                                <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                                <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning btn-sm me-1">
                                    <i class="bi bi-pencil-square"></i>
                                </a>
                                <button type="button" class="btn btn-danger btn-sm"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal"
                                        data-id="@e.Id"
                                        data-name="@e.FullName">
                                    <i class="bi bi-trash"></i>
                                </button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Delete</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete <strong id="empName"></strong>?
            </div>
            <div class="modal-footer">
                <form id="deleteForm" method="post">
                    <input type="hidden" name="id" id="empId" />
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <!-- jQuery already included -->
    <!-- DataTables CSS & JS -->
    <link rel="stylesheet" href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css" />
    <script src="https://cdn.datatables.net/1.13.6/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.6/js/dataTables.bootstrap5.min.js"></script>

    <script>
        $(document).ready(function () {
            // Initialize DataTable
            $('#employeeTable').DataTable({
                "paging": true,
                "searching": true,
                "info": true,
                "ordering": true,
                "lengthMenu": [5, 10, 25, 50],
                "pageLength": 10,
                "language": {
                    "search": "Search:"
                }
            });

            // Delete modal script
            var deleteModal = document.getElementById('deleteModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var empId = button.getAttribute('data-id');
                var empName = button.getAttribute('data-name');

                document.getElementById('empName').textContent = empName;
                document.getElementById('empId').value = empId;
                document.getElementById('deleteForm').action = '/Employee/Delete/' + empId;
            });
        });
    </script>
}
