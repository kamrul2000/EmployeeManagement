@model List<EmployeeManagement.Models.Employee>
@{
    ViewData["Title"] = "Employees";
}
<div class="container mt-4">
    <h2>Employees</h2>
    <a asp-action="Create" class="btn btn-primary mb-2">Add New Employee</a>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Department</th>
                <th>Join Date</th>
                <th>Salary</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model)
            {
                <tr>
                    <td>@e.FullName</td>
                    <td>@e.Email</td>
                    <td>@e.Department</td>
                    <td>@e.JoinDate.ToShortDateString()</td>
                    <td>@e.Salary</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@e.Id" class="btn btn-info btn-sm">Details</a>
                        <a asp-action="Edit" asp-route-id="@e.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="Delete" asp-route-id="@e.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
